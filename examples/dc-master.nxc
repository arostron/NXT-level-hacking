//MASTER
#define BT_CONN 1
#define INBOX 1
#define OUTBOX 5

sub BTCheck(int conn){
	if (!BluetoothStatus(conn)==NO_ERR){
	TextOut(5,LCD_LINE2,"Error"); Wait(1000);
	Stop(true);
	} 
}

task main(){
	string in, out, iStr;
	int i = 0;
	BTCheck(BT_CONN); //check slave connection
	
	Wait(5000);
	SendRemoteString(BT_CONN,OUTBOX,"LETSGO");
	
}
